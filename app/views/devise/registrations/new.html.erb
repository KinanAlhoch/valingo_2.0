<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>
  <div id="step_1" style="display: block">
    <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %></div>

    <div><%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %></div>
    <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
      <%= f.password_field :password, autocomplete: "off" %></div>

    <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

    <div class="btn" id="next_1">
      Next
    </div>
  </div>
  <div id="step_2" style="display: none">
    <div><%= f.label :sex %><br />
      Male:<%= f.radio_button :sex, :value => "Male", autofocus: true %>
      Female:  <%= f.radio_button :sex, :value => "Female", autofocus: true %>
    </div>
    <div><%= f.label :date_of_birth %><br />
      <%= f.text_field :date_of_birth, autofocus: true, placeholder: "yyyy-mm-dd" %></div>

    <div><%= f.label :bio %><br />
      <%= f.text_area :bio, autofocus: true, placeholder: "Tell something about yourself" %></div>

    <div style="width: 100%;float: left">
      <div style="float: left">
	<%= f.submit "Done" %>
      </div>
      <div class="btn" id="back_1" style="float: left">
	    Back
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('#next_1').click(function(){
    $('#step_1').hide();
    $('#step_2').show();
  });
  $('#back_1').click(function(){
    $('#step_1').show();
    $('#step_2').hide();
  });

</script>

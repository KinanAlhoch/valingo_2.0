




<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
<%#*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>%>
	<h1 class="text-center">Register</h1>
      </div>
      <div class="modal-body">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
	  <%= devise_error_messages! %>

	  <div id="step_1" style="display: block">
	    <div class="form-group">

	      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: 'Email'  %>
	      </div>
	      <div class="form-group">

		<%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: 'Name'  %>
		</div>
		<div class="form-group">
		  <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>

		  </div>
		  <div class="form-group">
		    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Password Confirmation" %>

		    </div>
	     <div class="form-group">
	       <div class="btn" id="next_1">
		 Next
	       </div>
		    </div>

		  </div>
		  <div id="step_2" style="display: none">
		    <div class="form-group">
							  Male:<%= f.radio_button :sex, :value => "Male", autofocus: true %>
						  Female:  <%= f.radio_button :sex, :value => "Female", autofocus: true %>

		    </div>
		    <div class="form-group">
		      Date Of Birth:<%= f.date_select :date_of_birth, autofocus: true,start_year: Date.today.year - 100 %>
		    </div>
		    <div class="form-group">
		      <%= f.text_area :bio, autofocus: true,class: 'form-control', placeholder: "Bio" %>
		    </div>


		    <div class="form-group">
		       <div class="btn" id="back_1">
		 Back
	       </div>
		      <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>

		    </div>
		  </div>
		<%end%>
	      </div>
	      <div class="modal-footer">
		<div class="col-md-12">
		  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn primary-btn' %>
		    <%= link_to "login", '/users/sign_in', class: 'btn primary-btn' %>

		    </div>
		  </div>
		</div>
	      </div>
	    </div>


	    <script type="text/javascript">
	      $('#next_1').click(function(){
		$('#step_1').hide();
		$('#step_2').show();
	      });
	      $('#back_1').click(function(){
		$('#step_1').show();
		$('#step_2').hide();
	      });

	    </script>
